---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 1. 데이터 가져오기
const allReviews = await getCollection('review');
const allVideos = await getCollection('video');

// 2. 데이터 정렬 및 필터링 (최신순 3개씩)
const reviews = allReviews
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const videos = allVideos
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Gedsc">
  <section class="hero-cyber">
    <div class="morph-container">
      <div class="morph-word" data-text="Gedsc">Gedsc</div>
    </div>
    <p class="hero-sub serif">기록하고, 사유하고, 천천히 공유하는 문학의 흔적</p>
  </section>

  <main class="container">
    <section class="section-block">
      <div class="section-header">
        <h2 class="serif">최근의 기록</h2>
        <a href="/review" class="more-link">전체보기 →</a>
      </div>
      <div class="post-list-text">
        {reviews.map((post) => (
          <article class="post-item-text">
            <a href={post.data.link} target="_blank" rel="noopener noreferrer">
              <div class="post-info">
                <div class="post-meta-top">
                  <span class="category-text">{post.data.category || 'Review'}</span>
                  <span class="date-text">{post.data.pubDate.toLocaleDateString('ko-KR')}</span>
                </div>
                <h3 class="serif">{post.data.title}</h3>
                <p class="description">{post.data.description}</p>
                <span class="read-more">네이버 블로그에서 읽기 ↗</span>
              </div>
            </a>
          </article>
        ))}
      </div>
    </section>

    <section class="section-block">
      <div class="section-header">
        <h2 class="serif">최근 영상</h2>
        <a href="/video" class="more-link">전체보기 →</a>
      </div>
      <div class="video-grid-text">
        {videos.map((video) => (
          <a href={`/video/${video.slug}`} class="video-card-text">
            <div class="video-icon"><span>▶</span></div>
            <h3 class="serif">{video.data.title}</h3>
            <span class="view-video">영상 보기</span>
          </a>
        ))}
      </div>
    </section>
  </main>

  <footer class="site-footer">
    <p>© 2026 gedsc · 세계문학 기록실</p>
  </footer>
</BaseLayout>

<style>
  .container { max-width: 800px; margin: 0 auto; padding: 0 20px; }

  /* --- 히어로 & 동적 효과 --- */
  .hero-cyber { padding: 140px 0 100px; text-align: center; }
  .morph-container { position: relative; display: inline-block; margin-bottom: 20px; }
  .morph-word {
    font-size: 6rem; font-weight: 900; letter-spacing: -3px; color: #1a1a1a;
    animation: morph-float 6s ease-in-out infinite;
  }
  .morph-word::before {
    content: attr(data-text); position: absolute; top: 0; left: 0;
    width: 100%; height: 100%; color: #b3934d; opacity: 0.2; z-index: -1;
    animation: glitch-offset 4s infinite linear alternate-reverse;
  }
  @keyframes morph-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  @keyframes glitch-offset {
    0% { transform: translate(0); }
    100% { transform: translate(4px, -4px); }
  }
  .hero-sub { color: #b3934d; font-size: 1.1rem; opacity: 0.8; }

  /* --- 공통 섹션 스타일 --- */
  .section-block { margin-bottom: 120px; }
  .section-header { display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 40px; border-bottom: 1px solid #eee; padding-bottom: 15px; }
  .more-link { font-size: 0.85rem; color: #b3934d; text-decoration: none; text-transform: uppercase; letter-spacing: 1px; }

  /* --- 북리뷰 텍스트 레이아웃 --- */
  .post-list-text { display: flex; flex-direction: column; gap: 60px; }
  .post-item-text a { text-decoration: none; color: inherit; display: block; transition: 0.3s; }
  .post-meta-top { display: flex; gap: 15px; font-size: 0.8rem; margin-bottom: 12px; color: #999; }
  .category-text { color: #b3934d; font-weight: 600; text-transform: uppercase; }
  .post-item-text h3 { font-size: 1.8rem; margin-bottom: 15px; line-height: 1.3; color: #1a1a1a; }
  .description { font-size: 1rem; color: #666; line-height: 1.8; margin-bottom: 15px; }
  .read-more { font-size: 0.85rem; color: #b3934d; font-weight: 500; }
  .post-item-text:hover { transform: translateY(-5px); }

  /* --- 영상 텍스트 그리드 --- */
  .video-grid-text { display: grid; grid-template-columns: repeat(3, 1fr); gap: 30px; }
  .video-card-text { 
    text-decoration: none; color: inherit; padding: 30px 20px; border: 1px solid #f0f0f0; 
    border-radius: 12px; transition: 0.3s; text-align: center; background: #fff;
  }
  .video-icon { font-size: 1.5rem; color: #b3934d; margin-bottom: 15px; }
  .video-card-text h3 { font-size: 1.1rem; line-height: 1.5; margin-bottom: 15px; min-height: 3em; }
  .view-video { font-size: 0.75rem; color: #bbb; text-transform: uppercase; letter-spacing: 1px; }
  .video-card-text:hover { border-color: #b3934d; box-shadow: 0 10px 30px rgba(179, 147, 77, 0.1); }

  .site-footer { padding: 80px 0; text-align: center; border-top: 1px solid #f9f9f9; color: #ccc; font-size: 0.85rem; }

  @media (max-width: 768px) {
    .morph-word { font-size: 4rem; }
    .video-grid-text { grid-template-columns: 1fr; }
  }
</style>