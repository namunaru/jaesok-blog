---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
// 경로 인식 오류를 방지하기 위해 파일 경로를 직접 지정합니다.
import { getPublishedPosts, mapNotionPageToSchema } from '../lib/notion/posts';

// 1. 로컬 영상 데이터 가져오기 및 날짜순 정렬
const videoEntries = await getCollection('video');
const latestVideos = videoEntries
  .sort((a, b) => {
    // 날짜 데이터가 없을 경우를 대비한 안전 로직입니다.
    const dateA = a.data.pubDate?.valueOf() ?? 0;
    const dateB = b.data.pubDate?.valueOf() ?? 0;
    return dateB - dateA;
  })
  .slice(0, 5); // 최근 5개만 표시

// 2. 노션 데이터 가져오기 (배포 후 방화벽 없는 환경에서 정상 작동)
let latestReviews = [];
try {
  const rawPosts = await getPublishedPosts();
  latestReviews = (rawPosts || []).map(mapNotionPageToSchema).slice(0, 5);
} catch (error) {
  console.error("노션 데이터를 불러오는 중 오류 발생:", error);
}
---

<BaseLayout title="gedsc | 조용한 세계문학 서재">
  <header class="hero-section">
    <h1 class="serif">안녕하세요, gedsc입니다</h1>
    <p class="hero-desc">
      이곳은 세계문학을 읽고,<br/>
      그 내용을 요약하고 해석하며<br/>
      개인적인 감상과 사유를 기록하는 공간입니다.
    </p>
  </header>

  <main class="archive-container">
    <section class="list-section">
      <h2 class="serif section-title">최근 기록 · 글</h2>
      <div class="post-list">
        {latestReviews.length > 0 ? (
          latestReviews.map((post) => (
            <a href={`/review/${post.id}`} class="post-item">
              <span class="post-title">{post.title}</span>
              <span class="post-date">{post.pubDate.toLocaleDateString('en-US')}</span>
            </a>
          ))
        ) : (
          <p class="empty-msg">기록된 글이 없습니다. (배포 후 노션 연동 확인 필요)</p>
        )}
      </div>
    </section>

    <section class="list-section">
      <h2 class="serif section-title">최근 기록 · 영상</h2>
      <div class="post-list">
        {latestVideos.map((video) => (
          <a href={`/video/${video.id.replace('.md', '')}`} class="post-item">
            <span class="post-title">▶ {video.data.title}</span>
            <span class="post-date">
              {video.data.pubDate ? video.data.pubDate.toLocaleDateString('en-US') : '12/28/2025'}
            </span>
          </a>
        ))}
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  /* 폰트 설정: 명조체(Title)와 고딕체(Body)의 조화 */
  .serif {
    font-family: 'Noto Serif KR', serif;
    font-weight: 700;
  }

  /* 히어로 섹션 디자인 */
  .hero-section {
    text-align: center;
    padding: 100px 20px 80px;
  }
  .hero-section h1 {
    font-size: 2.5rem;
    margin-bottom: 30px;
    color: #1a1a1a;
  }
  .hero-desc {
    font-size: 1.1rem;
    line-height: 2;
    color: #666;
    font-weight: 400;
  }

  /* 리스트 컨테이너 */
  .archive-container {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 20px 100px;
  }
  .list-section {
    margin-top: 80px;
  }
  .section-title {
    font-size: 1.4rem;
    text-align: center;
    margin-bottom: 40px;
    color: #333;
  }

  /* 개별 리스트 아이템 디자인 */
  .post-list {
    display: flex;
    flex-direction: column;
  }
  .post-item {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: 20px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s ease;
  }
  .post-item:hover {
    opacity: 0.6;
  }
  .post-title {
    font-size: 1.05rem;
    color: #2c2c2c;
    flex: 1;
    margin-right: 20px;
    line-height: 1.5;
  }
  .post-date {
    font-size: 0.85rem;
    color: #bbb;
    font-family: sans-serif; /* 날짜는 깔끔한 고딕 계열 */
  }

  .empty-msg {
    text-align: center;
    color: #999;
    padding: 40px 0;
    font-size: 0.9rem;
  }

  /* 모바일 대응 */
  @media (max-width: 640px) {
    .hero-section h1 { font-size: 2rem; }
    .post-item { flex-direction: column; gap: 8px; }
    .post-date { margin-left: 0; }
  }
</style>