---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 1. 데이터 가져오기 (리뷰와 영상)
const allReviews = await getCollection('review');
const allVideos = await getCollection('video');

// 2. 최신순 정렬 및 개수 제한 (메인에는 3개씩만 표시)
const reviews = allReviews
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const videos = allVideos
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Gedsc">
  <section class="hero-cyber">
    <div class="morph-word">Gedsc</div>
    <p class="hero-sub serif">기록하고, 사유하고, 천천히 공유하는 문학의 흔적</p>
  </section>

  <main class="container">
    <section class="section-block">
      <div class="section-header">
        <h2 class="serif">최근의 기록</h2>
        <a href="/review" class="more-link">전체보기 →</a>
      </div>
      <div class="post-list">
        {reviews.map((post) => (
          <article class="post-item">
            <a href={post.data.link} target="_blank" rel="noopener noreferrer">
              <div class="thumbnail-wrapper">
                <img src={post.data.thumbnail} alt={post.data.title} onerror="this.src='/fallback-image.png'" />
              </div>
              <div class="post-info">
                <h3 class="serif">{post.data.title}</h3>
                <p class="description">{post.data.description}</p>
                <span class="date">{post.data.pubDate.toLocaleDateString('ko-KR')}</span>
              </div>
            </a>
          </article>
        ))}
      </div>
    </section>

    <section class="section-block video-section">
      <div class="section-header">
        <h2 class="serif">최근 영상</h2>
        <a href="/video" class="more-link">전체보기 →</a>
      </div>
      <div class="video-grid">
        {videos.map((video) => (
          <a href={`/video/${video.slug}`} class="video-card">
            <div class="video-thumb">
              <img src={video.data.thumbnail} alt={video.data.title} />
              <span class="play-icon">▶</span>
            </div>
            <h3 class="serif">{video.data.title}</h3>
          </a>
        ))}
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .container { max-width: 900px; margin: 0 auto; padding: 0 20px; }
  
  /* 히어로 디자인 최적화 */
  .hero-cyber { padding: 100px 0 60px; text-align: center; }
  .morph-word { font-size: 4.5rem; font-weight: 800; margin-bottom: 10px; letter-spacing: -2px; }
  .hero-sub { color: #b3934d; font-size: 1.1rem; }

  .section-block { margin-bottom: 80px; }
  .section-header { display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 30px; border-bottom: 1px solid #eee; padding-bottom: 10px; }
  .more-link { font-size: 0.9rem; color: #999; text-decoration: none; }

  /* 리뷰 리스트 스타일 */
  .post-list { display: flex; flex-direction: column; gap: 40px; }
  .post-item a { display: flex; gap: 25px; text-decoration: none; color: inherit; }
  .thumbnail-wrapper { flex: 0 0 240px; height: 140px; border-radius: 6px; overflow: hidden; background: #f5f5f5; }
  .thumbnail-wrapper img { width: 100%; height: 100%; object-fit: cover; }
  .post-info h3 { margin: 0 0 10px; font-size: 1.4rem; line-height: 1.4; }
  .description { font-size: 0.95rem; color: #666; margin-bottom: 10px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
  .date { font-size: 0.85rem; color: #bbb; }

  /* 영상 그리드 스타일 */
  .video-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; }
  .video-card { text-decoration: none; color: inherit; }
  .video-thumb { position: relative; aspect-ratio: 16/9; border-radius: 6px; overflow: hidden; margin-bottom: 10px; }
  .video-thumb img { width: 100%; height: 100%; object-fit: cover; }
  .play-icon { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; font-size: 2rem; opacity: 0.8; }
  .video-card h3 { font-size: 1rem; line-height: 1.4; }

  @media (max-width: 768px) {
    .post-item a { flex-direction: column; }
    .thumbnail-wrapper { width: 100%; }
    .video-grid { grid-template-columns: 1fr; }
  }
</style>