---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allReviews = await getCollection('review');
const allVideos = await getCollection('video');

const reviews = allReviews
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const videos = allVideos
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Gedsc">
  <div class="theme-beige">
    
    <section class="hero-cyber">
      <div class="logo-wrap">
        {/* 스크린샷의 묵직한 블랙 느낌과 동적 효과를 결합합니다 */}
        <h1 class="glitch-logo" data-text="Gedsc">Gedsc</h1>
      </div>
      <p class="hero-sub serif">기록하고, 사유하고, 천천히 공유하는 문학의 흔적</p>
    </section>

    <main class="container">
      <section class="section-block">
        <div class="section-header">
          <h2 class="serif dark-text">최근 리뷰</h2>
          <a href="/review" class="more-link">전체보기 →</a>
        </div>
        {/* 목록 크기를 슬림하게 줄였습니다 */}
        <div class="post-list-slim">
          {reviews.map((post) => (
            <article class="post-item-slim">
              <a href={post.data.link} target="_blank" rel="noopener noreferrer">
                <div class="post-meta">
                  <span class="category">{post.data.category || 'Review'}</span>
                  <span class="date">{post.data.pubDate.toLocaleDateString('ko-KR')}</span>
                </div>
                <h3 class="serif">{post.data.title}</h3>
                <div class="arrow-icon">→</div>
              </a>
            </article>
          ))}
        </div>
      </section>

      <section class="section-block">
        <div class="section-header">
          <h2 class="serif dark-text">최근 영상</h2>
          <a href="/video" class="more-link">전체보기 →</a>
        </div>
        <div class="video-grid">
          {videos.map((video) => (
            <a href={`/video/${video.slug}`} class="video-card">
              <div class="video-thumb-container">
                {/* 중요: md파일의 'youtube' 값을 가져옵니다 */}
                <img src={video.data.youtube} alt={video.data.title} />
                <div class="play-overlay"><span>▶</span></div>
              </div>
              <h3 class="serif video-title">{video.data.title}</h3>
            </a>
          ))}
        </div>
      </section>
    </main>

    <footer class="site-footer">
      <p>© 2026 gedsc · 세계문학 기록실</p>
    </footer>
  </div>
</BaseLayout>

<style>
  :root { --bg-beige: #f9f7f2; --gold-main: #b3934d; --text-black: #1a1a1a; }
  .theme-beige { background: var(--bg-beige); color: var(--text-black); min-height: 100vh; }
  .container { max-width: 850px; margin: 0 auto; padding: 0 20px; }

  /* --- [로고 정밀 수정] image_e55b45.png 스타일 완벽 반영 --- */
  .hero-cyber { padding: 140px 0 90px; text-align: center; }
  .logo-wrap { position: relative; display: inline-block; margin-bottom: 25px; }
  
  .glitch-logo {
    /* 폰트 굵기 900, 자간 -0.06em, 장평 조절로 스크린샷 느낌 재현 */
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
    font-size: 7rem; 
    font-weight: 900; 
    letter-spacing: -0.065em; 
    transform: scaleX(0.97); 
    color: var(--text-black);
    position: relative;
    /* 사이버틱 금색 그라데이션 동적 효과 추가 */
    background: linear-gradient(135deg, #000 45%, #b3934d 50%, #000 55%);
    background-size: 250% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shimmer 10s linear infinite, float 6s ease-in-out infinite;
  }

  /* 사이버 글리치 잔상 */
  .glitch-logo::before {
    content: attr(data-text); position: absolute; top: 0; left: 0;
    color: var(--gold-main); opacity: 0.5; z-index: -1;
    animation: cyber-glitch 4s infinite linear alternate-reverse;
  }

  @keyframes shimmer { to { background-position: 250% center; } }
  @keyframes float { 0%, 100% { transform: scaleX(0.97) translateY(0); } 50% { transform: scaleX(0.97) translateY(-10px); } }
  @keyframes cyber-glitch { 0% { transform: translate(0); } 20% { transform: translate(-3px, 2px); clip-path: inset(10% 0 40% 0); } 100% { transform: translate(3px, -2px); } }

  .hero-sub { color: var(--gold-main); font-size: 1.15rem; margin-top: 5px; letter-spacing: 1px; }

  /* --- 최근 리뷰 슬림 스타일 --- */
  .post-list-slim { display: flex; flex-direction: column; gap: 10px; }
  .post-item-slim a {
    display: flex; align-items: center; justify-content: space-between;
    padding: 15px 25px; background: #fff; border-radius: 6px; text-decoration: none; color: inherit; transition: 0.3s;
  }
  .post-meta { display: flex; gap: 15px; font-size: 0.8rem; color: #999; flex: 0 0 160px; }
  .category { color: var(--gold-main); font-weight: 700; }
  .post-item-slim h3 { font-size: 1.3rem; flex: 1; margin: 0; }
  
  .post-item-slim:hover a { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(179, 147, 77, 0.1); border-left: 4px solid var(--gold-main); }

  /* --- 영상 썸네일 출력 보장 --- */
  .video-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; }
  .video-thumb-container { position: relative; aspect-ratio: 16/9; border-radius: 8px; overflow: hidden; background: #000; border: 1px solid #eee; }
  .video-thumb-container img { width: 100%; height: 100%; object-fit: cover; }
  .video-card:hover img { opacity: 0.6; }
</style>