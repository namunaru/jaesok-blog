---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allReviews = await getCollection('review');
const allVideos = await getCollection('video');

const reviews = allReviews
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const videos = allVideos
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Gedsc">
  <div class="theme-beige">
    <section class="hero-cyber">
      <div class="logo-wrap">
        {/* 스크린샷 스타일의 굵고 좁은 자간 로고 */}
        <h1 class="glitch-logo" data-text="Gedsc">Gedsc</h1>
      </div>
      <p class="hero-sub serif">기록하고, 사유하고, 천천히 공유하는 문학의 흔적</p>
    </section>

    <main class="container">
      <section class="section-block">
        <div class="section-header">
          <h2 class="serif dark-text">최근 리뷰</h2>
          <a href="/review" class="more-link">전체보기 →</a>
        </div>
        {/* 설명 삭제 및 간격을 넓힌 슬림 목록 */}
        <div class="post-list-slim wide-gap">
          {reviews.map((post) => (
            <article class="post-item-slim">
              <a href={post.data.link} target="_blank" rel="noopener noreferrer">
                <div class="post-meta">
                  <span class="category">{post.data.category || 'Review'}</span>
                  <span class="date">{post.data.pubDate.toLocaleDateString('ko-KR')}</span>
                </div>
                <h3 class="serif">{post.data.title}</h3>
                <div class="arrow-icon">→</div>
              </a>
            </article>
          ))}
        </div>
      </section>

      <section class="section-block">
        <div class="section-header">
          <h2 class="serif dark-text">최근 영상</h2>
          <a href="/video" class="more-link">전체보기 →</a>
        </div>
        <div class="video-grid">
          {videos.map((video) => (
            <a href={`/video/${video.slug}`} class="video-card">
              <div class="video-thumb-container">
                {/* youtube 속성 데이터를 정확히 호출 */}
                <img src={video.data.youtube} alt={video.data.title} />
                <div class="play-overlay"><span>▶</span></div>
              </div>
              <h3 class="serif video-title">{video.data.title}</h3>
            </a>
          ))}
        </div>
      </section>
    </main>
    <footer class="site-footer"><p>© 2026 gedsc · 세계문학 기록실</p></footer>
  </div>
</BaseLayout>

<style>
  :root { --bg-beige: #f9f7f2; --gold-main: #b3934d; --text-black: #1a1a1a; --border-tan: #e0ddd5; }
  .theme-beige { background: var(--bg-beige); color: var(--text-black); min-height: 100vh; }
  .container { max-width: 850px; margin: 0 auto; padding: 0 20px; }

  /* 로고: 굵기 900, 자간 조절 반영 */
  .hero-cyber { padding: 140px 0 90px; text-align: center; }
  .glitch-logo {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    font-size: 8rem; font-weight: 850; letter-spacing: 0.05em; transform: scaleX(0.97);
    color: var(--text-black); position: relative;
    background: linear-gradient(135deg, #000 45%, #b3934d 50%, #000 55%);
    background-size: 250% auto; -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    animation: shimmer 8s linear infinite, float 6s ease-in-out infinite;
  }
  @keyframes shimmer { to { background-position: 250% center; } }
  @keyframes float { 0%, 100% { transform: scaleX(0.97) translateY(0); } 50% { transform: scaleX(0.97) translateY(-10px); } }
  .hero-sub { color: var(--gold-main); font-size: 1.15rem; margin-top: 5px; }

  /* 최근 리뷰 간격 조정 */
  .post-list-slim.wide-gap { display: flex; flex-direction: column; gap: 25px; }
  .post-item-slim a { display: flex; align-items: center; justify-content: space-between; padding: 18px 25px; background: #fff; border-radius: 6px; text-decoration: none; color: inherit; box-shadow: 0 2px 8px rgba(0,0,0,0.02); transition: 0.3s; }
  .post-item-slim h3 { font-size: 1.3rem; flex: 1; margin: 0; }
  .post-item-slim:hover a { transform: translateY(-3px); border-left: 4px solid var(--gold-main); }

  /* 영상 썸네일 */
  .video-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 25px; }
  .video-thumb-container { position: relative; aspect-ratio: 16/9; border-radius: 8px; overflow: hidden; background: #000; border: 1px solid var(--border-tan); }
  .video-thumb-container img { width: 100%; height: 100%; object-fit: cover; opacity: 0.95; }
  .video-card:hover img { opacity: 0.6; }
</style>