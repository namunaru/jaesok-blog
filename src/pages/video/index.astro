---
import BaseLayout from '../../layouts/BaseLayout.astro'; // 경로 수정
import { getCollection } from 'astro:content';

const videos = await getCollection('video');
const sortedVideos = videos.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="영상리뷰 Archive | Gedsc">
  <div class="theme-beige">
    <section class="page-header">
      <h1 class="serif dark-text">영상리뷰 Archive</h1>
      <p class="hero-sub serif">시각과 청각으로 만나는 문학의 세계</p>
    </section>

    <main class="container">
      <div class="video-grid-archive">
        {sortedVideos.map((video) => (
          <article class="video-item">
            <a href={`/video/${video.slug}`}>
              <div class="thumb-wrap">
                {/* 데이터 필드를 'youtube'로 수정 */}
                <img src={video.data.youtube} alt={video.data.title} />
                <div class="play-icon">▶</div>
              </div>
              <div class="info">
                <span class="date">{video.data.pubDate.toLocaleDateString('ko-KR')}</span>
                <h2 class="serif">{video.data.title}</h2>
              </div>
            </a>
          </article>
        ))}
      </div>
    </main>

    <footer class="site-footer">
      <p>© 2026 gedsc · 세계문학 기록실</p>
    </footer>
  </div>
</BaseLayout>

<style>
  .theme-beige { background: #f9f7f2; min-height: 100vh; }
  .container { max-width: 1000px; margin: 0 auto; padding: 0 20px 100px; }
  .page-header { text-align: center; padding: 120px 0 70px; }
  .hero-sub { color: #b3934d; font-size: 1.1rem; }

  .video-grid-archive { display: grid; grid-template-columns: repeat(2, 1fr); gap: 40px; }
  .thumb-wrap { position: relative; aspect-ratio: 16/9; border-radius: 10px; overflow: hidden; background: #000; }
  .thumb-wrap img { width: 100%; height: 100%; object-fit: cover; opacity: 0.9; transition: 0.4s; }
  .play-icon { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; font-size: 3rem; opacity: 0; transition: 0.3s; }
  
  .info { padding: 15px 5px; }
  .date { font-size: 0.85rem; color: #999; }
  .info h2 { font-size: 1.5rem; margin-top: 8px; transition: 0.3s; }

  .video-item:hover { transform: translateY(-5px); }
  .video-item:hover img { opacity: 0.6; }
  .video-item:hover .play-icon { opacity: 1; }
  .video-item:hover h2 { color: #b3934d; }
  
  .site-footer { padding: 80px 0; text-align: center; color: #bbb; border-top: 1px solid #eee; }
  @media (max-width: 768px) { .video-grid-archive { grid-template-columns: 1fr; } }
</style>