---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// 1. 모든 비디오 콘텐츠 가져오기 및 날짜 역순 정렬
const allVideos = (await getCollection('video')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// 유튜브 썸네일 추출 함수
const getYoutubeThumbnail = (url: string) => {
  const regExp = /^.*((youtu.be\/)|(v\/)|(\/u\/\w\/)|(embed\/)|(watch\?))\??v?=?([^#&?]*).*/;
  const match = url.match(regExp);
  const id = (match && match[7].length == 11) ? match[7] : null;
  return id ? `https://img.youtube.com/vi/${id}/mqdefault.jpg` : null;
};
---

<BaseLayout title="Video Archive - jaesok-blog">
  <section class="video-list-header">
    <h1>Video Archive</h1>
    <p>총 {allVideos.length}개의 영상이 아카이빙 되었습니다.</p>
  </section>

  <div class="video-grid">
    {allVideos.map((video) => {
      const thumb = video.data.thumbnail || getYoutubeThumbnail(video.data.youtube);
      
      return (
        <a href={`/video/${video.id}`} class="video-card">
          <div class="thumbnail-container">
            {thumb ? (
              <img src={thumb} alt={video.data.title} loading="lazy" />
            ) : (
              <div class="no-thumb">No Image</div>
            )}
          </div>
          <div class="video-info">
            <time>{video.data.pubDate.toLocaleDateString('ko-KR')}</time>
            <h2>{video.data.title}</h2>
          </div>
        </a>
      );
    })}
  </div>
</BaseLayout>

<style>
  .video-list-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .video-card {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    border-radius: 12px;
    overflow: hidden;
    background: #fff;
    border: 1px solid #eee;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .video-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    opacity: 1;
  }

  .thumbnail-container {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #f0f0f0;
  }

  .thumbnail-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .no-thumb {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: #ccc;
  }

  .video-info {
    padding: 1.25rem;
  }

  .video-info time {
    font-size: 0.85rem;
    color: #888;
  }

  .video-info h2 {
    margin: 0.5rem 0 0;
    font-size: 1.15rem;
    line-height: 1.4;
    font-weight: 600;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>