---
const { prev, next } = Astro.props;
---
<nav class="post-pagination" style="display: flex; justify-content: space-between; margin-top: 50px;">
  {prev && (
    <a href={`/video/${prev.id}`}>← {prev.data.title}</a>
  )}
  {next && (
    <a href={`/video/${next.id}`}>{next.data.title} →</a>
  )}
</nav>